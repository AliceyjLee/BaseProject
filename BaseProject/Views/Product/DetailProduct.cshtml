<!--start content-->
<main class="page-content">

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header py-3 bg-transparent">
                    <h5 class="mb-0">상품 수정</h5>
                </div>
                <div class="card-body">
                    <div class="border p-3 rounded">
                        <form asp-controller="Product" asp-action="Update" method="post" enctype="multipart/form-data" class="row g-3" >
                            <div class="col-12">
                                <div class="col-12">
                                    <div> 등록 이미지 <img src="@Model.ImgUrl" style="width:300px; height:300px" /> </div>
                                </div>
                                <div>
                                    <label class="form-label">상품 이미지</label>
                                    <input class="form-control" type="file" name="ImgFile" img src="@Model.ImgUrl" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">상품명</label>
                                    <input type="text" class="form-control" name="Name" value="@Model.Name" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">가격</label>
                                    <input type="text" class="form-control" name="Price" value="@Model.Price" />
                                </div>
                                <p></p>
                                <div>사용되는 자재 목록</div>
                                <p></p>
                                    @foreach (Product_Use_Metrail_Model Metrail in Model.ProductUseMetrailModels)
                                    {

                                    <div class="col-12">
                                        <label class="form-label">@Metrail.Metrail.Name</label>
                                    </div>
                                    <div class="col-12">
                                        <input type="text" class="form-control" name="Count" value="@Metrail.Quantity" />
                                    </div>

                                    }
                                    <input type="hidden" name="status" value="True" />
                                <p></p>
                                <div class="col-12">
                                    <button input type="submit" class="btn btn-primary px-4">상품 수정</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div><!--end row-->

</main>
<!--end page main-->

